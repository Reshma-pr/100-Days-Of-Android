<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C6AFB"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#6F36FD"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="30dp"
        android:text="100 Days Of Code - Day 1"
        android:textColor="#F0FFF0"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/activity_a_random_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:padding="30dp"
        android:textSize="70dp"
        tools:text="Number" />

    <Button
        android:id="@+id/activity_a_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="#7C4BF7"
        android:text="ACTIVITY A BUTTON"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="5dp"
        android:text="Activity A"
        android:textColor="#FDFCD4"
        android:textSize="20dp" />


</LinearLayout>