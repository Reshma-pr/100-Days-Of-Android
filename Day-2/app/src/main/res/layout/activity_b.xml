<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/luke_chesser_hqo6uyo4nbg_unsplash">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="40dp"
        android:text="100 Days Of Code - Day 2"
        android:textColor="#FFE4C4"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/r" />

    <TextView
        android:id="@+id/username_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="12dp"
        android:text="Username:"
        android:textColor="#FFE4C4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_name_display_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginVertical="30dp"
        android:layout_toEndOf="@id/username_display"
        android:fontFamily="sans-serif-black"
        android:padding="5sp"
        android:textColor="#FFE4C4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pwd_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_display"
        android:layout_margin="22dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Password:"
        android:padding="12dp"
        android:textColor="#FFE4C4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pasword_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_display"
        android:padding="5sp"
        android:layout_margin="30dp"
        android:layout_toEndOf="@id/pwd_display"
        android:fontFamily="sans-serif-black"
        android:textColor="#FFE4C4"
        android:textSize="14sp" />


</RelativeLayout>